doctype html
html
  head
    title= title
    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
    link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet")
 
  body(style={padding:'0px'})
    .w-100
      nav.navbar.navbar-expand-lg.navbar-light.bg-light.navbar-inverse
        a.navbar-brand(href='/fridge' style={'padding-left':'1rem', 'font-size':'1.5rem'})
          span.iconify(data-icon='mdi:fridge-outline' data-inline='false' style={'font-size':'3em'})
            p(style={'font-size':'1.5em'}) FRIDGE RECIPES
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse
          .navbar-nav.navbar-right
            a.nav-item.nav-link.active(href='/fridge') View Fridge
            a.nav-item.nav-link(href='/add-fridge') Edit Fridge
            a.nav-item.nav-link(href='/recipes') Recipes
            if user
              a.nav-item.nav-link(href='/log-out') Log Out     
                span(style={'font-size':'0.8em'} class="glyphicon glyphicon-log-in")
            
          

    div(style={'padding':'0rem 2rem'})
      block content
      

